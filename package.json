{
  "name": "pay-products-ui",
  "description": "Payments products ui application",
  "version": "0.0.1-SNAPSHOT",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">8.11.3"
  },
  "standard": {
    "globals": [
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect"
    ],
    "ignore": [
      "app/assets/**/*.js",
      "node_modules_local/**/*.*"
    ]
  },
  "scripts": {
    "compile": "grunt generate-assets",
    "clean": "grunt clean",
    "start": "node ./start.js",
    "watch": "chokidar app test *.js --initial -c 'npm run test'",
    "watch-live-reload": "./node_modules/.bin/grunt watch",
    "lint": "./node_modules/.bin/standard",
    "lint-sass": "./node_modules/.bin/sass-lint -v",
    "test-with-coverage": "node ./node_modules/nyc/bin/nyc npm test",
    "test": "node ./node_modules/mocha/bin/mocha '!(node_modules)/**/*+(_test|_tests)'.js",
    "snyk-protect": "snyk protect",
    "prepublish": "npm run snyk-protect"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "browsered/*",
      "Gruntfile.js",
      "app/browsered.js",
      "public/js/*"
    ]
  },
  "dependencies": {
    "appmetrics": "3.1.x",
    "appmetrics-statsd": "2.0.x",
    "body-parser": "1.18.x",
    "client-sessions": "^0.8.0",
    "connect-flash": "^0.1.1",
    "cookie-parser": "1.4.x",
    "correlation-id": "^2.1.2",
    "csrf": "3.0.x",
    "currency-formatter": "^1.4.2",
    "express": "4.16.x",
    "govuk-frontend": "^2.4.0",
    "lodash": "4.17.x",
    "minimist": "1.2.x",
    "morgan": "1.9.x",
    "nunjucks": "^3.1.2",
    "request": "^2.88.0",
    "requestretry": "^3.0.2",
    "rfc822-validate": "^1.0.0",
    "serve-favicon": "2.5.0",
    "staticify": "2.0.x",
    "throng": "4.0.x",
    "tunnel": "0.0.6",
    "url-join": "^4.0.0",
    "winston": "2.4.x"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "@pact-foundation/pact-node": "6.16.0",
    "chai": "^4.2.0",
    "cheerio": "^1.0.0-rc.2",
    "chokidar-cli": "latest",
    "envfile": "^2.3.0",
    "eslint": "5.9.x",
    "grunt": "1.0.x",
    "grunt-babel": "^8.0.0",
    "grunt-browserify": "^5.3.0",
    "grunt-cli": "1.3.x",
    "grunt-contrib-clean": "2.0.x",
    "grunt-contrib-copy": "1.0.x",
    "grunt-contrib-uglify": "^4.0.0",
    "grunt-contrib-watch": "1.1.x",
    "grunt-sass": "2.1.x",
    "html5shiv": "3.7.x",
    "mocha": "5.2.x",
    "nock": "9.2.x",
    "node-sass": "4.10.x",
    "nodemon": "^1.18.6",
    "nunjucksify": "^2.2.0",
    "nyc": "^11.7.1",
    "pact": "4.3.2",
    "proxyquire": "~2.1.0",
    "sass-lint": "^1.12.1",
    "sinon": "5.0.x",
    "snyk": "1.78.x",
    "standard": "^12.0.1",
    "supertest": "^3.3.0"
  },
  "snyk": true
}
