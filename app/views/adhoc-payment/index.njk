{% extends "../layout.njk" %}

{% block page_title %}
  {{serviceName}}
{% endblock %}

{% block main_content %}
<h1 class="heading-large page-title">
  {{productName}}
</h1>
<p id="description">
  {{ productDescription | striptags(true) | escape | nl2br }}
</p>

<form action="/pay/{{productExternalId}}" method="post" name="startPaymentForm" class="push-bottom">
<input id="csrf" name="csrfToken" type="hidden" value="{{csrf}}"/>
  <div class="currency-input form-group">
    <label class="form-label-bold" for="payment-amount">
      Payment amount
      <span class="visually-hidden">in £</span>
    </label>
    {% if price %}
    <div class="panel panel-border-wide">
      <h2 id="payment-amount" class="lede">{{ price }}</h2>
    </div>
    {% else %}
    <div class="currency-input__inner">
      <span class="currency-input__inner__unit">£</span>
      <input class="form-control"
      aria-label="Enter amount in pounds"
      name="payment-amount"
      data-non-numeric=""
      type="text"
      id="payment-amount"
      value=""
      autofocus=""
      data-validate="required currency"
      data-confirmation="true"
      data-confirmation-label="Amount to pay: "
      data-confirmation-prepend="£"/>
    </div>
    {% endif %}
  </div>
  <button type="submit" class="button">
    Proceed to payment
  </button>
</form>
{% endblock %}
